{
  "manifest_version" : 2,

  "name": "AsanaNG",
  "short_name": "AsanaNG",
  "description": "Unofficial Asana Chrome Extension",
  "version": "0.7",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "author": "Amit Gangrade - amitgangrade04@gmail.com",

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon16.png"
    },
    "default_title": "AsanaNG",
    "default_popup": "popup.html"
  },

  "omnibox": { "keyword" : "asana"},
  "icons": {
    "16": "img/icon16.png"
  },

  "content_scripts": [
    {
      "js": [ "js/lib/jquery.min.js", "js/chrome/contentscript.js" ],
      "matches": [ "https://app.asana.com/*" ],
      "css": ["css/content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "permissions": ["cookies", "tabs", "https://app.asana.com/*"],
  "content_security_policy": "script-src 'self' https://maxcdn.bootstrapcdn.com; object-src 'self'",

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+A"
      }
    }
  }
}