{
  "manifest_version" : 2,

  "name": "AsanaNG - Asana Extension for Chrome",
  "short_name": "AsanaNG",
  "description": "Access Asana - quick and easy",
  "version": "0.3",
  "default_locale": "fr",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "author": "Amit Gangrade - amitgangrade04@gmail.com",

  "background": {
    "scripts": [
      "js/constants.js",
      "js/chrome/background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon16.png"
    },
    "default_title": "AsanaNG",
    "default_popup": "popup.html"
  },

  "permissions": [
    "cookies",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*.asana.com/"
  ],

  "content_scripts": [{
    "matches": ["*://*.asana.com/*"],
    "js": ["js/lib/jquery-2.2.4.min.js", "js/contentscript/translate.js"]
  }],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+A"
      }
    }
  }
}